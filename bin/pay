var argv = require('optimist')
.demand(['secret', 'account', 'to', 'amount'])
.argv
, Q = require('q')
, Drop = require('../lib/drop')
, drop = new Drop()

drop.opts.secrets[argv.account] = argv.secret

drop.payment(argv.account, argv.to, argv.amount)
.then(function(res) {
    console.log(res)
    drop.socket.terminate()
})
.done()
